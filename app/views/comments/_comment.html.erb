<div class="comment" >
	<% if comment.user == current_user %>
	<%= link_to "×", comment_path(comment), :method => :delete, :remote => true, data: { confirm: 'Delete the review?', disable_with: '×' }, :class => 'close' %>
	<% end %>
	
	<h4> <%= image_tag(comment.user.avatar_url(:navbar), class: "img-circle") if comment.user.avatar? %> <%= comment.user.name %> </h4>
	<p><%= comment.body %></p>
</div>