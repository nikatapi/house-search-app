<header class="navbar navbar-inverse navbar-static-top" role="navigation">
  
    <div class="container-fluid">
    
      
      <%= link_to "HOUSE SEARCH APP", root_path, id: "logo" %>
      <div class="navbar-header pull-right">
      
        <ul class="nav navbar-nav">
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Help", help_path %></li>
          <% if user_signed_in? %>
            <li><%= image_tag(current_user.avatar_url(:navbar), class: "img-circle") if current_user.avatar? %> </li>

            
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.name %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "View Profile", current_user %></li>
                <li>
                  <%= link_to(:conversations) do%>
                  Messages 
                  <span class="badge"><%=current_user.mailbox.receipts.where(:is_read => false).count%></span>
                  <%end%>
                </li>
                <li><%= link_to "Edit Account", edit_user_registration_path %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", destroy_user_session_path, :method=>'delete' %>
                </li>
              </ul>
            </li>
          <% else %>
           
            <li><%= link_to "Sign in", "#login", "data-toggle" => "modal", :class => 'btn btn-small' %></li>
            <li><%= link_to user_omniauth_authorize_path(:facebook), class: "btn btn-social btn-facebook" do%>
              <i class="fa fa-facebook"></i> | Sign in with Facebook
            <% end %>
          <% end %>
         
        </ul>
      </div>
    </div>
  
</header>