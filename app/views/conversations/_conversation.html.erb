<%= content_tag_for(:li, conversation, :class => "list-group-item") do |conversation| %>
  <p>
    <%= link_to conversation.subject, conversation_path(conversation) %>
    |
    <% if conversation.is_completely_trashed?(current_user) %>
      <%= link_to 'Untrash', untrash_conversation_path(conversation), method: :post, class: "btn btn-primary btn-large"  %>
    <% else %>
      <%= link_to 'Move to trash', trash_conversation_path(conversation), method: :post, class: "btn btn-primary btn-large" %>
    <% end %>
  </p>
<% end %>
