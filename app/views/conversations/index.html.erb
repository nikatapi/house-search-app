<h1>Messages</h1>
<div class="row">
	<div class="col-sm-6 col-md-6 col-md-offset-3">
		<ul class="nav nav-tabs" role="tablist">
			<li class="active"><a href="#inbox" role="tab" data-toggle="tab">Inbox <span class="badge"><%= mailbox.inbox.count %></span></a></li>
			<li><a href="#sentbox" role="tab" data-toggle="tab">Sentbox <span class="badge"><%= mailbox.sentbox.count %></span></a></li>
			<li><a href="#trash" role="tab" data-toggle="tab">Trash <span class="badge"><%= mailbox.trash.count %></span></a></li>
		</ul>

		<div class="tab-content">
			<div class="tab-pane fade in active" id="inbox">
				<div class="panel panel-default">
				  <div class="panel-heading text-center"><h4><span class="glyphicon glyphicon-comment"></span> Inbox <span class="badge"><%= mailbox.inbox.count %></span> </h4></div>
				  <div class="panel-body">
				    <ul class="list-group">
				  		<%= render collection: mailbox.inbox, partial: 'conversation' %>
					</ul>
				  </div>
				</div>
			</div>

			<div class="tab-pane" id="sentbox">
				<div class="panel panel-default ">
				  <div class="panel-heading text-center"><h4><span class="glyphicon glyphicon-send"></span> Sentbox <span class="badge"><%= mailbox.sentbox.count %></span></h4></div>
				  <div class="panel-body">
				    <ul class="list-group">
				  		<%= render collection: mailbox.sentbox, partial: 'conversation' %>
					</ul>
				  </div>
				</div>
			</div>

			<div class="tab-pane" id="trash">
				<div class="panel panel-default">
				  <div class="panel-heading text-center"><h4><span class="glyphicon glyphicon-trash"></span> Trash <span class="badge"><%= mailbox.trash.count %></span></h4></div>
				  <div class="panel-body">
				    <ul class="list-group">
				  		<%= render collection: mailbox.trash, partial: 'conversation' %>
				  		<%= link_to "Empty trash", {:controller => "conversations", :action => "empty_trash"}, :title=> "Move to Trash", :method=>'post', :class => 'btn btn-danger' %>

					</ul>
				  </div>
				</div>
			</div>

		</div>

		<script type="text/javascript">
			$('#myTab a').click(function (e) {
	  			e.preventDefault()
	  			$(this).tab('show')
			});
		</script>
		
	</div>
</div>
