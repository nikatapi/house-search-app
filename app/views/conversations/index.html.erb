<h1>Messages</h1>
<div class="row">
	<div class="col-sm-6 col-md-4 col-md-offset-4">
		<div class="panel panel-default">
		  <div class="panel-heading text-center"><h4><span class="glyphicon glyphicon-comment"></span> Inbox </h4></div>
		  <div class="panel-body">
		    <ul class="list-group">
		  		<%= render collection: mailbox.inbox, partial: 'conversation' %>
			</ul>
		  </div>
		</div>

		<div class="panel panel-default ">
		  <div class="panel-heading text-center"><h4><span class="glyphicon glyphicon-send"></span> Sentbox</h4></div>
		  <div class="panel-body">
		    <ul class="list-group">
		  		<%= render collection: mailbox.sentbox, partial: 'conversation' %>
			</ul>
		  </div>
		</div>

		<div class="panel panel-default">
		  <div class="panel-heading text-center"><h4><span class="glyphicon glyphicon-trash"></span> Trash</h4></div>
		  <div class="panel-body">
		    <ul class="list-group">
		  		<%= render collection: mailbox.trash, partial: 'conversation' %>
			</ul>
		  </div>
		</div>



		<%= link_to 'Start Conversation', :new_conversation %>
	</div>
</div>
