<div class="modal fade in" id="sign_up">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button class="close" data-dismiss="modal">x</button>
				<h2>Sign Up</h2>
			</div>

			<div class="modal-body">
				<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
					<%= devise_error_messages! %>

					<%= f.label "Full Name" %>
  					<%= f.text_field :name %>

					<div>
					<%= f.label :email %><br />
					<%= f.email_field :email%>
					</div>

					<div>
					<%= f.label :password %><br />
					<%= f.password_field :password %>
					</div>

					<div>
					<%= f.label :password_confirmation %><br />
					<%= f.password_field :password_confirmation %>
					</div>

					<%= f.label :avatar %>
  					<%= f.file_field :avatar %>
  

			</div>

			<div class="modal-footer">
			<div class="row">

			<div class="col-md-3"><%= f.submit "Sign up", :class => 'btn btn-success' %></div>

			<div class="col-md-2"><a href="#" class="btn btn-primary" data-dismiss="modal">Close</a></div>
			</div>
			</div>

			<% end %>
		</div>
	</div>
</div>