<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<% if signed_in? %>
	<div class ="row">
		<aside class="span4">
			<section>
			<%= render 'shared/user_info' %>
			</section>
			<%= link_to "Search for a house!",  newsearch_path, class: "btn btn-large btn-primary" %>
			<%= link_to "Add A New House!",  newhouse_path, class: "btn btn-large btn-primary" %>

		</aside>
	
		<div class="span8">
			<h3>Your registered houses</h3>
			
			<div style='width: 800px;'>
  				<div id="map" style='width: 800px; height: 400px;'></div>
			</div>
			
			<script type="text/javascript">
			handler = Gmaps.build('Google');
			handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  				markers = handler.addMarkers(<%=raw @hash.to_json %>);
  				handler.bounds.extendWith(markers);
  				handler.fitMapToBounds();
			});
			</script>
			<%= render 'shared/feed' %>
		</div>
	</div>

<% else %>

<div class="center hero-unit">
  <h1>Spatial skyline query app</h1>

  <h2>
    Welcome to the spatial skyline query house search app!
  </h2>

  <%= link_to "Sign up now!",  signup_path, class: "btn btn-large btn-primary" %>
</div>


<% end %>