<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
<% if user_signed_in? %>
	<div class ="row">
		<div class="jumbotron jumbotron-intro text-center">
			<h1>Find a house, the easy way.</h1>
		</div>
		<%= render 'shared/welcome' %>

		<% if current_user.houses.any? %>
			<h1>Your registered houses</h1>
			<div class="row">
				<div class="col-md-3">
					<div style='width: 100%;'>
		        	<div id="map" style='height: 250px;'></div>
		       		</div>
					<%= render 'shared/house_map' %>
				</div>
				<div class="col-md-8">
					<%= render 'shared/feed' %>
				</div>
			</div>
		<% end %>
	</div>

<% else %>

	<!-- Welcome and signup prompt -->
	<div class ="row">
		<div class="jumbotron jumbotron-intro text-center">
		  <h1>House rental made easy.</h1>

		  <%= link_to "Sign up now!", "#sign_up", "data-toggle" => "modal", class: "btn btn-primary btn-large" %>
		  <%= link_to user_omniauth_authorize_path(:facebook), class: "btn btn-social btn-facebook btn-large" do %>
		 	<i class="fa fa-facebook"></i> | Sign in with Facebook
		  <% end %>
		</div>
	</div>


	<!--Application Features -->
	<%= render 'shared/welcome' %>

<% end %>


