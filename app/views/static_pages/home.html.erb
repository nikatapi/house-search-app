<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
<% if user_signed_in? %>
	<div class ="row">
		<%= render 'shared/welcome' %>

		<% if current_user.houses.any? %>
			<h1>Your registered houses</h1>
			<div class="row">
				<div class="col-md-3">
					<div style='width: 100%;'>
		        	<div id="map" style='height: 250px;'></div>
		       		</div>
					<%= render 'shared/house_map' %>
				</div>
				<div class="col-md-8">
					<%= render 'shared/feed' %>
				</div>
			</div>
		<% end %>
	</div>

<% else %>

	<!-- Welcome and signup prompt -->
	<div class ="row">
		<div class="jumbotron text-center">
		  <h1>House rental app</h1>

		  <h2>
		    Welcome to the spatial skyline query house search app!
		  </h2>

		  <%= link_to "Sign up now!",  new_user_registration_path, class: "btn btn-primary btn-large" %>
		  <%= link_to user_omniauth_authorize_path(:facebook), class: "btn btn-social btn-facebook btn-large" do %>
		 	<i class="fa fa-facebook"></i> | Sign in with Facebook
		  <% end %>
		</div>
	</div>


	<!--Application Features -->
	<div class ="row">
		<h1>How does it work</h1>
		<div class="col-sm-6 col-md-4 text-center">
		    <div class="thumbnail">
		      <span class="glyphicon glyphicon-search"></span> 
		      <div class="caption">
		        <h3>Find Houses</h3>
		        <p>Search for a house that fits your needs</p>
		        
		      </div>
		    </div>
  		</div>
		
		<div class="col-sm-6 col-md-4 text-center">
		    <div class="thumbnail">
		      <span class="glyphicon glyphicon-home"></span> 
		      <div class="caption">
		        <h3>Add your house</h3>
		        <p>You can add your property for rent</p>
		        
		      </div>
		    </div>
  		</div>

  		<div class="col-sm-6 col-md-4 text-center">
		    <div class="thumbnail">
		      <span class="glyphicon glyphicon-user"></span> 
		      <div class="caption">
		        <h3>Verified Users</h3>
		        <p>Users from all over the world are renting their propery</p>
		        
		      </div>
		    </div>
  		</div>
	</div>





<% end %>


