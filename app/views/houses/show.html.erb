<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
<script>window.jQuery || document.write('<script src="js/jquery-1.7.2.min.js"><\/script>')</script>


<% provide(:title, @house.user.name) %>

<div class="row">
  <aside class="col-md-2 text-center">
    <section>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><span class="glyphicon glyphicon-user"></span> Owner Details</h3>
        </div>
        <div class="panel-body ">
          <%= render "/shared/message_modal" , :user => @house.user, :first_message => true  %>
          <%= render 'shared/user_info' , :user => @house.user %>
        </div>
      </div>
    </section>  
  </aside>


  <div class="col-md-6">
    <% if @house.pictures.any? %>
        <div class="panel panel-default">
          <div class="panel-heading text-center">
            <h3 class="panel-title"><span class="glyphicon glyphicon-picture"></span> Images</h3>
          </div>
          <div class="panel-body">
           <%= render 'shared/house_images_slider', :house => @house %>
          </div>
        </div>
    <% end %>
  </div>

  <div class="col-md-4">
    <%= render 'shared/house_details', :house => @house %>
  </div>
</div>




