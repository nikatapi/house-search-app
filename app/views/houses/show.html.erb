<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<% provide(:title, @house.user.name) %>

<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @house.user %>
        <%= @house.user.name %>
      </h1>
    </section>
    <%= link_to "Search for a house!",  newsearch_path, class: "btn btn-large btn-primary" %>
    <%= link_to "Add A New House!",  newhouse_path, class: "btn btn-large btn-primary" %>

  </aside>


  <div class="span8">
    <h3>House Details</h3>
    <span class="country"> Country: <%= @house.country %></span>,
    <span class="city">City:<%= @house.city %></span>,
    <span class="address">Address:<%= @house.address %></span>
    <span class="description">Description:<%= @house.description %></span>
    <span class="price">Price:<%= @house.price %>â‚¬</span>
    
    <div style='width: 800px;'>
      <div id="map" style='width: 800px; height: 400px;'></div>
    </div>
      
    <script type="text/javascript">
      handler = Gmaps.build('Google');
      handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
      markers = handler.addMarkers(<%=raw @hash.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
      });
    </script>
  </div>
</div>




