<% provide(:title, 'Add a new house') %>
<h1>Add a new house </h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@house) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.label :country %>
      <%= f.country_select :country , prompt: 'Please select a country'%>

      <%= f.label :address %>
      <%= f.text_field :address %>

      <%= f.label :city %>
      <%= f.text_field :city %>

      <%= f.label :price %>
      <%= f.text_field :price %>

      <%= f.submit "Add house to my profile", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>