<% provide(:title, "Edit House Details") %>
<h1>Update House Details</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@house) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label "Description*" %>
      <span class="help-block">Give a detailed description of your house</span>
      <%= f.text_area :description %>
      

      <%= f.label "Country*" %>
      <%= f.country_select :country , prompt: 'Please select a country'%>

      <%= f.label "City*" %>
      <%= f.text_field :city %>

      <%= f.label "Address*" %>
      <%= f.text_field :address %>


      <%= f.label "Price*" %>
      <span class="help-block">Price per month</span>
      <%= f.number_field :price, in: 10...1500 %>

      <span class="help-block">Hold ctrl to select multiple images</span>
     
      <!-- Use HTML5 multiple attribute to enable multiple selection
           and pass back to controller all files as an array, ready 
           for carrierwave!!
           file_field_tag, since images is not a house attribute
       -->
      <%= file_field_tag "images[]", type: :file, multiple: true %>

      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>

  </div>
</div>