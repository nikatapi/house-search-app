# File upload gem and image manipulation
gem 'carrierwave'
gem 'rmagick'
gem 'mini_magick'


gem "font-awesome-rails"

#Private messaging gem
gem 'mailboxer'

gem 'rails_12factor', group: :production





group :doc do
